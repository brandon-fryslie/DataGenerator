							input(type = "text", name = "cFirst")
					tr
						if (!validationErrors[2])
							td(style = "color: red") Last Name:
						else
							td Last Name:
						td
							input(type = "text", name = "cLast")
					tr
						if (!validationErrors[3])
							td(style = "color: red") User Name:
						else
							td User Name:
						td
							input(type = "text", name="cUser")
					tr
						if (!validationErrors[0])
							td(style = "color: red") Email Address:
						else
							td Email Address:
						td
							input(type = "text", name="cEmail")
					tr
						if (!validationErrors[4])
							td(style = "color: red") Display Name:
						else
							td Display Name:
						td
							input(type = "text", name="cDisplay")
					tr
						td Amount:
						td
							input(id="spinMe", type = "text", name="cCount")
				input(id="createUsers", type='submit', value='Create', style='margin-left:5px')
				input(id='rplode', type='button', value='xPlode!', style='margin-left:5px')