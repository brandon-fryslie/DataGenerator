html
	head
		title Make a request
		link(rel='stylesheet', href='stylesheets/mainStyle.css')
	body
		h2 Let's request an artifact
		#myDefect
			form(method='post', action='/defect')
				table
					tr
						td
							h3 Defect
					tr
						td Name:
						td
							input(type = 'text', name="dName")
					tr 
						td Severity:
						td	
							select(name='dSeverity')
								- for(i = 0; i < indexSeverity.length; i++)
									option(value='#{indexSeverity[i]}')
										value #{indexSeverity[i]}
						tr
						td Priority:
						td
							select(name='dPriority')
								- for(i = 0; i < indexPriority.length; i++)
									option(value='#{indexPriority[i]}')
										value #{indexPriority[i]}
						br
				input(type='submit', value='Query', style='margin-left:5px')
		#myStory
			form(method='post', action='/story')
				table
					tr
						td
							h3 Story
					tr
						td Name:
						td
							input(type = 'text', name="sName")
					tr 
						td State:
						td	
							select(name='sState')
								- for(i = 0; i < indexState.length; i++)
									option(value='#{indexState[i]}')
										value #{indexState[i]}
						br
				input(type='submit', value='Query', style='margin-left:5px')
		br
		#myResults
			- for(var i = 0; i<output.length; i++)
				p #{output[i]._refObjectName}